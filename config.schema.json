{
  "$schema": "https://gist.githubusercontent.com/estruyf/d5696a00569fa67d14e83a965873e51c/raw/a3cfafa01d6d24bf89316ef372ba28ecd44e75ba/homebridge.schema.json",
  "pluginAlias": "presence-switch",
  "pluginType": "accessory",
  "singular": false,
  "headerDisplay": "Busy Flag Presence Switch",
  "footerDisplay": "Plugin which allows you retrieve your presence via the Microsoft Graph and call your busy flag API.",
  "schema": {
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "required": [
      "name",
      "appId",
      "upApi",
      "downApi",
      "setColorApi",
      "offApi",
      "onApi"
    ],
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "Presence Indicator"
      },
      "appId": {
        "title": "Azure AD application ID",
        "description": "The GUID of the Azure AD app.",
        "type": "string",
        "default": "66204339-daf1-40fa-aa31-57342272edce"
      },
      "hostname": {
        "title": "Hostname",
        "description": "Hostname which serves the API",
        "type": "string",
        "default": "192.168.1.192"
      },
      "port": {
        "title": "Port",
        "description": "Port which serves the API",
        "type": "integer",
        "default": 5000
      },
      "upApi": {
        "title": "Up API",
        "description": "API to turn up your device",
        "type": "string",
        "default": "http://192.168.1.192:5000/api/up/"
      },
      "downApi": {
        "title": "Down API",
        "description": "API to turn down your device",
        "type": "string",
        "default": "http://192.168.1.192:5000/api/down"
      },
      "interval": {
        "title": "Interval",
        "description": "Polling interval.",
        "type": "integer",
        "default": 1
      },
      "setColorApi": {
        "title": "Set color API",
        "description": "API to set the color",
        "type": "string",
        "default": "http://192.168.1.192:5000/api/switch"
      },
      "offApi": {
        "title": "Off API",
        "description": "API to turn off your device",
        "type": "string",
        "default": "http://192.168.1.192:5000/api/off"
      },
      "onApi": {
        "title": "On API",
        "description": "API to turn on your device",
        "type": "string",
        "default": "http://192.168.1.192:5000/api/on"
      },
      "startTime": {
        "title": "Start time",
        "description": "Define the time when you start your working day (ex: 8:30).",
        "type": "string",
        "default": "8:30"
      },
      "endTime": {
        "title": "End time",
        "description": "Define the time when you end your working day (ex: 18:00).",
        "type": "string",
        "default": "18:00"
      },
      "weekend": {
        "title": "Weekend checks",
        "description": "Do you want to check in the weekends",
        "type": "boolean",
        "default": false
      },
      "statusColors": {
        "title": "Status color",
        "description": "Define the color values for the following states: 'available', 'busy', and 'away'.",
        "type": "object",
        "default": {},
        "properties": {
          "available": {
            "type": "object",
            "title": "Available",
            "description": "The color for when you are available.",
            "default": {},
            "required": [
              "red",
              "green",
              "blue"
            ],
            "properties": {
              "red": {
                "type": "integer",
                "title": "Red",
                "description": "Value between: 0 - 255.",
                "default": 0
              },
              "green": {
                "type": "integer",
                "title": "Green",
                "description": "Value between: 0 - 255.",
                "default": 144
              },
              "blue": {
                "type": "integer",
                "title": "Blue",
                "description": "Value between: 0 - 255.",
                "default": 0
              }
            }
          },
          "away": {
            "type": "object",
            "title": "Away",
            "description": "The color for when you are away.",
            "default": {},
            "required": [
              "red",
              "green",
              "blue"
            ],
            "properties": {
              "red": {
                "type": "integer",
                "title": "Red",
                "description": "Value between: 0 - 255.",
                "default": 255
              },
              "green": {
                "type": "integer",
                "title": "Green",
                "description": "Value between: 0 - 255.",
                "default": 191
              },
              "blue": {
                "type": "integer",
                "title": "Blue",
                "description": "Value between: 0 - 255.",
                "default": 0
              }
            }
          },
          "busy": {
            "type": "object",
            "title": "Busy",
            "description": "The color for when you are busy.",
            "default": {},
            "required": [
              "red",
              "green",
              "blue"
            ],
            "properties": {
              "red": {
                "type": "integer",
                "title": "Red",
                "description": "Value between: 0 - 255.",
                "default": 179
              },
              "green": {
                "type": "integer",
                "title": "Green",
                "description": "Value between: 0 - 255.",
                "default": 0
              },
              "blue": {
                "type": "integer",
                "title": "Blue",
                "description": "Value between: 0 - 255.",
                "default": 0
              }
            }
          }
        }
      },
      "lightType": {
        "title": "Light type",
        "description": "Define the type of light you want to show.",
        "type": "string",
        "default": "switch",
        "oneOf": [
          {
            "title": "default",
            "enum": [ "" ]
          },
          {
            "title": "Always on",
            "enum": [ "on" ]
          },
          {
            "title": "Blink",
            "enum": [ "blink" ]
          },
          {
            "title": "Hearthbeat",
            "enum": [ "hearthbeat" ]
          }
        ]
      },
      "debug": {
        "title": "Debug",
        "type": "boolean",
        "default": true
      }
    }
  },
  "form": null,
  "display": null
}