{
  "$schema": "https://gist.githubusercontent.com/estruyf/d5696a00569fa67d14e83a965873e51c/raw/a3cfafa01d6d24bf89316ef372ba28ecd44e75ba/homebridge.schema.json",
  "pluginAlias": "presence-switch",
  "pluginType": "accessory",
  "singular": false,
  "headerDisplay": "Busy Flag Presence Switch",
  "footerDisplay": "Plugin which allows you retrieve your presence via the Microsoft Graph and call your busy flag API.",
  "schema": {
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "required": [
      "name",
      "appId",
      "hostname",
      "port",
      "servoApi",
      "upAngle",
      "downAngle",
      "offApi",
      "onApi"
    ],
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "Presence Indicator"
      },
      "appId": {
        "title": "Azure AD application ID",
        "description": "The GUID of the Azure AD app.",
        "type": "string",
        "default": "66204339-daf1-40fa-aa31-57342272edce"
      },
      "hostname": {
        "title": "Hostname",
        "description": "Hostname which serves the API",
        "type": "string",
        "default": "192.168.1.192"
      },
      "port": {
        "title": "Port",
        "description": "Port which serves the API",
        "type": "integer",
        "default": 5000
      },
      "servoApi": {
        "title": "Servo API",
        "description": "API of the servo motor",
        "type": "string",
        "default": "/api/servo"
      },
      "upAngle": {
        "title": "Up Angle",
        "description": "Up angle of the servo motor",
        "type": "integer",
        "default": 5
      },
      "downAngle": {
        "title": "Down Angle",
        "description": "Down angle of the servo motor",
        "type": "integer",
        "default": 120
      },
      "interval": {
        "title": "Interval",
        "description": "Polling interval.",
        "type": "integer",
        "default": 1
      },
      "offApi": {
        "title": "Off API",
        "description": "API to turn off your device",
        "type": "string",
        "default": "/api/off"
      },
      "onApi": {
        "title": "On API",
        "description": "API to turn on your device",
        "type": "string",
        "default": "/api/on"
      },
      "startTime": {
        "title": "Start time",
        "description": "Define the time when you start your working day (ex: 8:30).",
        "type": "string",
        "default": "8:30"
      },
      "endTime": {
        "title": "End time",
        "description": "Define the time when you end your working day (ex: 18:00).",
        "type": "string",
        "default": "18:00"
      },
      "weekend": {
        "title": "Weekend checks",
        "description": "Do you want to check in the weekends",
        "type": "boolean",
        "default": false
      },
      "statusAngles": {
        "title": "Status anges",
        "description": "Define the angle values for the following states: 'available', 'busy', and 'away'.",
        "type": "object",
        "default": {},
        "properties": {
          "available": {
            "type": "object",
            "title": "Available",
            "description": "The angle for when you are available.",
            "default": {},
            "required": [
              "angle"
            ],
            "properties": {
              "angle": {
                "type": "integer",
                "title": "Angle",
                "description": "Value between: 0 - 180.",
                "default": 0
              }
            }
          },
          "away": {
            "type": "object",
            "title": "Away",
            "description": "The angle for when you are away.",
            "default": {},
            "required": [
              "angle"
            ],
            "properties": {
              "angle": {
                "type": "integer",
                "title": "Angle",
                "description": "Value between: 0 - 180.",
                "default": 120
              }
            }
          },
          "busy": {
            "type": "object",
            "title": "Busy",
            "description": "The color for when you are busy.",
            "default": {},
            "required": [
              "angle"
            ],
            "properties": {
              "angle": {
                "type": "integer",
                "title": "Angle",
                "description": "Value between: 0 - 180.",
                "default": 120
              }
            }
          }
        }
      },
      "debug": {
        "title": "Debug",
        "type": "boolean",
        "default": true
      }
    }
  },
  "form": null,
  "display": null
}